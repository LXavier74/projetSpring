// Test StderrLogger
@Test
public void testStderrLogger() {
// create the service
StderrLogger logger = new StderrLogger();
// start the service
logger.start();
// use the service
use(logger);
// stop the service
logger.stop();
}

@Test
public void testFileLogger() {
FileLogger logger = new FileLogger("tmp/projetSpringJava.log");
logger.start();
use(logger);
logger.stop();
}

@Test
public void testBeanFileLogger() {
// create the service
BeanFileLogger logger = new BeanFileLogger();
// set parameter
// start
logger.start();
// use
use(logger);
// stop
logger.stop();
}
